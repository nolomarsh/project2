<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%-include('../partials/head.ejs')%>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <nav>
            <%-include('../partials/nav.ejs')%>
        </nav>
        <main>
            <div class="evoContainer <%=pokemon.role%>Card">
                <% for (let stage of pokemon.preEvolutions) { %>
                    <img src="/images/<%=pokemon.name%>/<%=stage.name%>.png" alt="">
                    <span>>Level <%=stage.evolveLv%>></span>
                <% } %>
                <img src="/images/<%=pokemon.name%>/<%=pokemon.name%>.png" alt="<%=pokemon.name%>">
            </div>
            <h1><%=pokemon.name%></h1>
            <div class="tagBox">
                <p class="tag-m"><%=pokemon.range%></p>
                <p class="tag-m"><%=pokemon.role%></p>
            </div>
            <% if (currentUser) { %>
                <form action="/users/favorite/<%=pokemon._id%>" method="post">
                    <input type="text" name="userId" value="<%=currentUser._id%>" hidden>
                    <input class="btn btn-add" type="submit"  value=
                        <% if (!currentUser.favePokemon.includes(pokemon.name)) { %>
                            "Favorite"
                        <% } else { %>
                            "Unfavorite"
                        <% } %>
                    >
                </form>
            <% } %>
            <div class="statsTable">
                <h3 class="statsTitle">Stats</h3>
                <% for (let stat of ['offense','endurance','mobility','scoring','support']) { %>
                    <div class="statLine">
                        <span style="text-transform:capitalize"><%=stat%>: </span>
                        <% let num = pokemon.stats[stat];
                            while (num > 0) {
                                if (num >= 1) { %>
                                    <i class="fas fa-star"></i>
                                <% num--
                                } else if (num === 0.5) { %>
                                    <i class="fas fa-star-half"></i>
                                <% num--
                                }
                            } %>
                    </div>
                <% } %>
            </div>

            <h2>Moves</h2>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/basic.png" alt="basic attack">
                    <p>basic attack</p>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.basic%></p>
                </div>
            </div>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/passive.png" alt="passive ability">
                    <p><%=pokemon.moves.passive.name%></p>
                    <div class="tagBox">
                        <p>passive</p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.passive.desc%></p>
                </div>
            </div>
            <h3>Level 1/3</h3>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/primaryStart.png" alt="">
                    <p><%=pokemon.moves.primary.start.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.primary.start.cooldown%>s</p>
                        <p><%=pokemon.moves.primary.start.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.primary.start.desc%></p>
                </div>
            </div>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/secondaryStart.png" alt="">
                    <p><%=pokemon.moves.secondary.start.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.secondary.start.cooldown%>s</p>
                        <p><%=pokemon.moves.secondary.start.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.secondary.start.desc%></p>
                </div>
            </div>
            <h3>Level <%=pokemon.moves.primary.choiceLv%> (choose one)</h3>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/primary1.png" alt="">
                    <p><%=pokemon.moves.primary.choice1.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.primary.choice1.cooldown%>s</p>
                        <p><%=pokemon.moves.primary.choice1.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.primary.choice1.desc%></p>
                </div>
            </div>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/primary2.png" alt="">
                    <p><%=pokemon.moves.primary.choice2.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.primary.choice2.cooldown%>s</p>
                        <p><%=pokemon.moves.primary.choice2.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.primary.choice2.desc%></p>
                </div>
            </div>
            <h3>Level <%=pokemon.moves.secondary.choiceLv%> (choose one)</h3>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/secondary1.png" alt="">
                    <p><%=pokemon.moves.secondary.choice1.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.secondary.choice1.cooldown%>s</p>
                        <p class=<%=pokemon.moves.secondary.choice1.moveType%>><%=pokemon.moves.secondary.choice1.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.secondary.choice1.desc%></p>
                </div>
            </div>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/secondary2.png" alt="">
                    <p><%=pokemon.moves.secondary.choice2.name%></p>
                    <div class="tagBox">
                        <p><i class="fas fa-clock"></i> <%=pokemon.moves.secondary.choice2.cooldown%>s</p>
                        <p class=<%=pokemon.moves.secondary.choice2.moveType%>><%=pokemon.moves.secondary.choice2.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.secondary.choice2.desc%></p>
                </div>
            </div>
            <h3>Level <%=pokemon.moves.unite.level%></h3>
            <div class="moveBox">
                <div class="moveHeader">
                    <img src="/images/<%=pokemon.name%>/unite.png" alt="">
                    <p><%=pokemon.moves.unite.name%></p>
                    <div class="tagBox">
                        <p>unite</p>
                        <p class=<%=pokemon.moves.unite.moveType%>><%=pokemon.moves.unite.moveType%></p>
                    </div>
                </div>
                <div class="moveBody">
                    <p><%=pokemon.moves.unite.desc%></p>
                </div>
            </div>
        </main>
        <footer>
            <%-include('../partials/footer.ejs')%>
        </footer>
        <script type="text/javascript">
            // $('#faveBtn').click(() => {
            //     console.log(currentUser);
            // })
        </script>
    </body>
</html>
