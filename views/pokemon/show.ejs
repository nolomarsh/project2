<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <%-include('../partials/head.ejs')%>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1><%=pokemon.name%></h1>
        <img src="/images/<%=pokemon.name%>/<%=pokemon.name%>.png" alt="<%=pokemon.name%>">
        <div class="tagBox">
            <p class="tag tag-m"><%=pokemon.range%></p>
            <p class="tag tag-m"><%=pokemon.role%></p>
        </div>
        <div class="statsTable">
            <p>Offense: <%=pokemon.stats.offense%>/5</p>
            <p>Endurance: <%=pokemon.stats.endurance%>/5</p>
            <p>Mobility: <%=pokemon.stats.mobility%>/5</p>
            <p>Scoring: <%=pokemon.stats.scoring%>/5</p>
            <p>Support: <%=pokemon.stats.support%>/5</p>
        </div>
        <h2>Moves</h2>
        <div class="moveBox">
            <div class="moveHeader">
                <img src="/images/basic.png" alt="basic attack">
                <p>basic attack</p>
            </div>
            <div class="moveBody">
                <p><%=pokemon.moves.basic%></p>
            </div>
        </div>
        <div class="moveBox">
            <div class="moveHeader">
                <img src="/images/<%=pokemon.name%>/passive.png" alt="passive ability">
                <p><%=pokemon.moves.passive.name%></p>
            </div>
            <div class="moveBody">
                <p><%=pokemon.moves.passive.desc%></p>
            </div>
        </div>
        <h3>Level 1/3</h3>
        <div class="moveBox">
            <div class="moveHeader">
                <img src="/images/<%=pokemon.name%>/<%=pokemon.moves.primary.start.name.replace(' ','-')%>.png" alt="">

                <p><%=pokemon.moves.primary.start.name%></p>
            </div>
            <div class="moveBody">
                <p><%=pokemon.moves.primary.start.desc%></p>
            </div>
        </div>
    </body>
</html>
